@model MicroFrontend.Models.LoginViewModel

@{
    ViewData["Title"] = "Connexion";
}


<div class="card shadow p-4 mx-auto" style="max-width: 840px;">
    <div class="text-center mb-3">
        <img src="~/MLS.png" alt="Logo MédiLabo Solutions" style="max-width: 500px;" />
    </div>


    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Username">Identifiant</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Mot de passe</label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100 mt-3">Se connecter</button>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}